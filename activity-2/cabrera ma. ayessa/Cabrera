		            System.out.println("YOU SELECTED 1pc CHOPSUEY");

		            total=total+25;

		            }else if (item==5){

		            System.out.println("YOU SELECTED 1pc CRISPY PATA");

		            total=total+25;

		            }else{

		                System.out.println("INVALID KEY");

		            }

		        

		    }else if(ctgry==2){

		        System.out.println("--YOU SELECTED SNACKS--");

