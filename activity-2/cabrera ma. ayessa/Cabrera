		        //FOOD PRICES//

		        if (item==1){

		            System.out.println("YOU SELECTED 1pc LUMPIA");

		            total=total+15;

		            }else if (item==2){

		            System.out.println("YOU SELECTED 1pc PANCIT CANTON");

		            total=total+20;

		            }else if (item==3){

		            System.out.println("YOU SELECTED 1pc HOTDOG");

		            total=total+15;

